
@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head{
    <script src="~/Scripts/Account/Login.js?JsParamter=@SiteConfig.GetConfig().JsParamter"></script>
<link rel="stylesheet" href="/Resource/user/css/login.css">
}




<div class="login-content">
    <div class="container clearfix">
        <div class="login-form fr">

            <div class="login-tab">
                <a href="javascript:void(0)">用户登录</a>
            </div>

            <div class="login-box ">
                <form>
                    <div class="item item-fore1">
                        <span class="iconfont icon-yonghuming icon fl"></span>
                        <input type="text" class="itxt fl" placeholder="已验证手机" id="AccountName"/>
                    </div>
                    <div class="item item-fore2">
                        <span class="iconfont icon-mima icon fl"></span>
                        <input type="password" class="itxt fl" placeholder="密码" id="Password"/>
                    </div>
                    <div class="forget-pw fr">
                        <a href="/Account/ForgetPassword1">忘记密码</a>
                    </div>
                    <div class="login-btn" >
                        <button class="btn-entry" id="btn_Login" type="button">登&nbsp;&nbsp;&nbsp;&nbsp;录</button>
                        <input id="returnUrl" style="display: none" value="@(Request["ReturnUrl"]==null?"":Request["ReturnUrl"])"   />
                    </div>
                    <div class="warn" id="LoginErrorPlace" style="display: none">
                        <span class="iconfont icon-jinzhi fl"></span>
                        <span class="warn-info">提示：用户名或密码错误！</span>
                       
                    </div>

                </form>
            </div>

            <div class="regist-link fr clearfix ">
                <a href="/Account/Register">立即注册</a>
                <span class="iconfont icon-jiantouarrow594"></span>
             
            </div>

           
        </div>
    </div>
</div>

