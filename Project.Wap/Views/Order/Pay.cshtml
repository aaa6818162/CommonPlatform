@using Project.Config



@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "选择支付方式";
}

@section Head
{

    <script src="~/Scripts/Order/Pay.js?JsParamter=@SiteConfig.GetConfig().JsParamter"></script>
    <link rel="stylesheet" href="/Resource/css/pay.css">
<link href="~/Resource/css/dialog.css" rel="stylesheet" />
}



<!--内容-->
<div class="pay-content">
    <div class="container clearfix">
        <!--购物步骤-->
        <div class="steps">
            <ul>
                <li>我的购物车<span></span></li>
                <li>确定订单信息<span></span></li>
                <li class="active">选择支付方式<span></span></li>
                <li>完成<span></span></li>
            </ul>
        </div>

        <div class="detail-info ">
            <div class="detail-info-tit">付款信息</div>
            <div class="detail-info-main">
                <div class="detail-info-success">
                    <span class="info-warn">订单提交成功，请尽快付款！</span>
                    <span class="infoOrder">
                        <span class="infoOrder-tit">订单号：</span>
                        <span class="infoOrder-num">11</span>
                      
                    </span>
                </div>
                <div class="detail-info-alert">
                    <span class="alert-text">请您在24小时内完成支付，否则订单会被自动取消</span>
                    <span class="alert-ext">(库存紧俏订单请参见详情页时限)</span>
                </div>
                <div class="amount-payable">
                    <span class="payable-tit">应付金额：</span>
                    <span class="payable-price">0.01</span>
                    <span class="payable-y">元</span>
                </div>
            </div>
        </div>


        @using (Html.BeginForm("ConfirmPay", "Order", FormMethod.Post, new {@id = "payconfirm", @name = "payconfirm", target = "_blank"}))
        {
            <!--快捷支付-->
            <input id="OrderNo" name="OrderNo" value="9000420144" style="display: none"/>
            <div class="fast-payment">
                <div class="fast-payment-tit">支付方式</div>
                <div class="fast-payment-main">
                    <div class="payment_bank">
                        <input type="radio" name="Paycode" value="Alipay"/>
                        <span class="payment-text">
                            <span class="iconfont icon-zhifubao"></span>
                            <span class="zhi">支付宝</span>
                        </span>
                    </div>
                    

                    <div class="payment_bank">
                        <input type="radio" name="Paycode" value="WechatPay"   data-subpaycode="01"/>
                        <span class="payment-text">
                            <span class="iconfont icon-weixinzhifu"></span>
                            <span class="zhi">微信支付</span>
                        </span>
                    </div>
                </div>
            </div>


            <div class="payment">
                    <div class="bankCard">
                        <div class="payNow clearfix">
                            <div class="pay-f fl">
                                <input class="btn-smt" type="button" value="提交" id="btn_ConfirmPay">

                                <input class="btn-smt" type="submit" value="提交" id="btn_ConfirmPay_Submit" style="display: none">
                            </div>
                        </div>
                    </div>
              
            </div>

        }

    </div>
</div>



<section class="model_bg"></section>
<section class="my_model">
    <p class="title">支付完成<span class="closeModel">X</span></p>
    <p>支付是否成功</p>
    <img class="z-weixin-ewm" src="" style="display: none">
    <div class="opBtn"><a href="javascript:;" class="dialog-sure">已完成</a><a href="javascript:;" class="dialog-close">关闭</a>
    </div>
</section>





