<body class="smart-style-4">

    <!-- #HEADER -->
    <header id="header">
        <div id="logo-group" style="background-color:#222D36">

            <!-- PLACE YOUR LOGO HERE -->
            <span id="logo"> <a href="/Home/Index"><img src="~/Assets/lib/smart/img/logo.png"></a> </span>
            <!-- END LOGO PLACEHOLDER -->
            <!-- END AJAX-DROPDOWN -->
        </div>

        <!-- end projects dropdown -->
        <!-- #TOGGLE LAYOUT BUTTONS -->
        <!-- pulled right: nav area -->
        <div class="pull-right">
            <!-- logout button -->
            <div id="logout" class="btn-header transparent pull-right">
                <span> <a href="/Auth/Logout" title="退出" data-action="userLogout" data-logout-msg="确定要退出系统？"><i class="fa fa-sign-out"></i></a> </span>
            </div>
            <!-- end logout button -->
            <!-- #SEARCH -->
            <!-- end input: search field -->
            <!-- fullscreen button -->
            <div id="fullscreen" class="btn-header transparent pull-right">
                <span> <a href="javascript:void(0);" data-action="launchFullscreen" title="Full Screen"><i class="fa fa-arrows-alt"></i></a> </span>
            </div>
            @Html.UserInfo(HttpContext.Current.User.Identity.Name)
            <!-- end fullscreen button -->
        </div>
        <!-- end pulled right: nav area -->

    </header>
    <!-- END HEADER -->
    <!-- #NAVIGATION -->
