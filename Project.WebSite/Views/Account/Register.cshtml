
@{
    ViewBag.Title = "注册";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head{

    <script src="~/Scripts/Account/Register.js?JsParamter=@SiteConfig.GetConfig().JsParamter"></script>

<link rel="stylesheet" href="/Resource/register/css/regInfo.css">
}


<div class="forgetpassword-content">
    <div class="container clearfix">
        <div class="forgetpassword-tit">新会员注册</div>
       
        <form action="">
            <div class="form_group">
                <label>账　号</label>
                <input type="text" value="" id="AccountName"  placeholder="手机号"/>
            </div>
            <div class="form_group">
                <label>密码</label>
                <input type="password" value="" id="Password"/>
            </div>
            <div class="form_group">
                <label>确认密码</label>
                <input type="password" value="" id="ConfirmPassword"/>
            </div>
            <div class="form_group">
                <label>验证码</label>
                <input type="text" value="" id="MobileCode"/>
                <input type="button" value="获取短信验证码" id="btn_SendMobileCode"/>
            </div>

            <div class="form_group">
                <input type="checkbox" class="chebox" id="Aggree"/>
                同意注册条款
            </div>

    
            <button class="btn_gray" type="button" id="btn_Register">注册</button>
        </form>

    </div>
</div>




       